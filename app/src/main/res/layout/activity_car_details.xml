<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_primaryContainer"
    tools:context=".carDetails.CarDetailsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_list"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/md_theme_light_onPrimary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_image_list" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/model"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_list" />

    <TextView
        android:id="@+id/tv_details_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:text="model" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/make"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tv_details_make"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_details_model"
        app:layout_constraintStart_toStartOf="@+id/tv_details_model"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        tools:text="make" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/price"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tv_details_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_details_make"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_details_make"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        tools:text="price" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/description"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tv_details_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        android:textSize="20sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/tv_details_price"
        app:layout_constraintStart_toStartOf="@+id/tv_details_price"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        tools:text="description" />

</androidx.constraintlayout.widget.ConstraintLayout>
